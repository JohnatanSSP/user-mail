# .env.example - copy to .env and fill real secrets

# Emails_InGress (email service)
SMTP_USERNAME=your-email@gmail.com
# Use App Password (recommended) not your main Gmail password
SMTP_PASSWORD=your-app-password
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5433/postgres
SPRING_DATASOURCE_USERNAME=postgres-user
SPRING_DATASOURCE_PASSWORD=postgres-password
RABBITMQ_ADDRESSES=amqps://your-rabbit-url
RABBITMQ_USERNAME=your-rabbit-username
RABBITMQ_PASSWORD=your-rabbit-password
RABBITMQ_VHOST=your-vhost
RABBITMQ_PORT=5672
EMAILS_SERVICE_PORT=8080

# User_InGress (user service)
USER_DS_URL=jdbc:postgresql://localhost:5430/ms_user_ms
USER_DS_USERNAME=postgres-user
USER_DS_PASSWORD=postgres-password
USER_RABBITMQ_ADDRESSES=amqps://your-rabbit-url
USER_RABBITMQ_USERNAME=your-rabbit-username
USER_RABBITMQ_PASSWORD=your-rabbit-password
USER_RABBITMQ_VHOST=your-vhost
USER_RABBITMQ_PORT=5672
FLYWAY_LOCATIONS=classpath:db/migration
USER_SERVICE_PORT=8081

# Optional: Docker container credentials (if you run Postgres/Rabbit locally via docker-compose)
# POSTGRES_CONTAINER_USER=postgres-user
# POSTGRES_CONTAINER_PASS=postgres-password
# POSTGRES_CONTAINER_DB=ms_user_ms

